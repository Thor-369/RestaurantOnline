<!DOCTYPE html>
<html lang="en">
  <%- include('fragmentos/head'); %>
  <style>
    @media (min-width: 992px) {
      .alto-100 {
        height: 100vh;
      }
    }
  </style>
  <script>
    function cargar(id,nombre,precio,descripcion) {
      document.getElementById("idnombre").value = nombre;
      document.getElementById("idprecio").value = precio;
      // document.getElementById("iddescripcion").textContent = descripcion;
      document.getElementById("iddescripcion").value =descripcion;
    };
  </script>
  <body
    style="background: linear-gradient(90deg, rgb(14, 0, 3), rgb(51, 18, 10))"
  >
    <!--
    <%- include('fragmentos/navbar'); %>
    -->
    <div class="wcontainer"></div>
    <main class="container d-flex align-items-center justify-content-center">
      <div class="row border rounded">
        <div class="col-12 col-lg-6">
          <div class="card">
            <div></div>
            <div class="card-body">
              <div class="row">
                <div class="col-12">
                  <div class="row">
                    
                    <div class="col-12 col-sm-6 col-md-6">
                      <h5>Nuevo Platillo</h4>
                      
                    </div>
                  </div>
                </div>
                <form action="/upload" method="post" enctype="multipart/form-data">
                  <div class="input-group ">
                      <div class="custom-file">
                          <input type="file" name="image" class="custom-file-input" id="inputGroupFile02">
                          <label class="  btn" style="background-color: black;" for="inputGroupFile02" aria-describedby="inputGroupFileAddon02">Elegir Imagen</label>
                      </div>
                  </div>
                 
                  <div class="form-group col-12 col-sm-6 col-md-6 mx-auto ml-auto">
                      <button type="submit" class="btn btn-success btn-block">
                          Subir Imagen
                      </button>
                  </div>
              </form>
              <div class="col-12 col-sm-6 col-md-6 mx-auto">
                <img
                  src="../assets/img/face.jpg"
                  class="img-thumbnail"
                  alt="imagen"
                />
              </div>
                <form  id="formulario1" class="form" action="" method="post">
                  <input id="id" type="text" name="id" class="form-control" value="" style="display:none;">
                  <div class="form-group"><input id="idnombre" type="text" name="nombre"  placeholder="Nombre del Platillo" class="form-control" value="<%= nombre %>"></div>
                 <div class="form-group">
                  <input id="idprecio" type="text" name="precio"  placeholder="Precio" class="form-control" value="<%= precio %>">
                 </div>
                  <div class="form-group">
                      <textarea id="iddescripcion" name="descripcion" placeholder="Descripción" class="form-control"><%= descripcion %> </textarea>
                  </div>
                  

                  <div class="togglebutton">
                    <label >
                      <input type="checkbox" checked>
                      <span class="toggle">
                       
                      </span>
                      Estado del platillo
                    </label>
                  </div>


                  <div class="col-12 mt-2">
                    <div class="row">
                      <div class="col-12 col-sm-6 col-md-3 col-lg-6 mx-auto">
                        <button
                                                  
                          class="py-3 px-2 w-100 btn btn-outline-secondary"
                          onclick= "document.formulario1.action ='/administrar'; 
                          document.formulario1.submit()"  

                        >
                          <div class="mx-auto">Nuevo</div>
                        </button>
                      </div>
                      <div class="col-12 col-sm-6 col-md-3 col-lg-6 mx-auto" >
                        <button
                          id="guardar"                           
                          class="py-3 px-2 w-100 btn btn-outline-secondary"
                          
                          onclick= "document.formulario1.action ='/actualizarPlatillo';
                          document.formulario1.submit()
                          "                       
                        >
                          <div class="mx-auto">Guardar</div>
                        </button>

                        
                      </div>
                    </form>
                      <div
                        class="col-12 col-sm-6 col-md-3 col-lg-6 mx-auto d-flex"
                      >
                     
                      </div>
                      
                      
                    </div>
                  </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-12 col-lg-6 d-flex">
          <div class="card tablaif">
            <div class="card-body">
              <div class="row h-100">
                <div class="col-12 col-sm-9 col-md-9 p-1" style="height: 35px">
                  <div class="input-group input-group-sm m-0">
                    <div class="row mx-0 w-100">
                      <span
                        class="col-3 input-group-text"
                        id="inputGroup-sizing-sm"
                        >Buscar:</span
                      >
                      <div class="col-9 px-auto">
                        <form action="/administrar?_method=DELETE" method="POST">
                          <input
                          type="text"
                          class="form-control"
                          aria-label="Nombre"
                          aria-describedby="basic-addon1"
                          name="buscar"
                          onchange="form.submit();"
                          value="<%=buscar%> "
                        /> 
                        </form>
                        <!-- <input type="button" class="form-control" value="Pinchame y verás"  /> -->
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col-12 col-sm-3 col-md-3 d-flex" style="height: 35px">
                  <span class="custom-dropdown">
                    <select>
                      <option>Nombre</option>
                      <option>Precio</option>
                    </select>
                  </span>
                </div>
                <div class="col-12">
                  <span class="input-group-text"
                    >Tabla Platillos</span
                  >
                </div>
                <div class="col-12 pb-4" style="height: 380px">
                  <div class="card m-0">
                    <div class="card-body">
                      <div class="row">
                        <div class="col-12">
                          <table class="table table-hover">
                            <thead>
                              <tr>
                                <th scope="col">Nro</th>
                                <th scope="col">Nombre</th>
                                <th scope="col">Precio</th>
                                <th scope="col">Calificacion</th>
                                <th scope="col">Editar</th>
                              </tr>
                            </thead>
              
                            <tbody>
                              <% platillos.forEach(function(platillo) { %>
                              <tr>
                                <th scope="row">1</th>
                                <td><%= platillo.nombre %></td>
                                <td><%= platillo.precio %></td>
                                <td><%= platillo.calificacion %></td>
                                <td>
                                 <!-- <form action="/administrar?_method=PUT" method="POST">
                                    <input id="id" type="hidden" name="id" value="<%= platillo.id %>">
                                    <input id="name" type="hidden" name="nombre" value="<%= platillo.nombre %>" />
                                    <input id="value" type="hidden" name="precio" value="<%= platillo.precio %>" />
                                    <input id="rang" type="hidden" name="calificacion" value="<%= platillo.calificacion %>" />
                                    <input id="descripcion" type="hidden" name="descripcion" value="<%= platillo.descripcion %>" />
                                    <input type="hidden" name="_method" value="PUT">
                                    <input id="edit" type="submit" name="editar" value="Edit" />
                                  </form>-->
                                  <a href="#" onclick="return cargar('<%= platillo.id %>','<%= platillo.nombre %>','<%= platillo.precio %>','<%= platillo.descripcion %>')">MODIFICAR</a>
                                </td>
                              </tr>
                              <% }); %>
                            </tbody>
                          </table>
                        </div>
                      </div>
                    </div>
                  </div>
              
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
  </body>
</html>
